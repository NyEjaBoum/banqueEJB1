<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="pretPU" transaction-type="JTA">
        <jta-data-source>java:/jdbc/pretDS</jta-data-source>
        <class>com.pret.entity.Pret</class>
        <class>com.pret.entity.Remboursement</class>
        <class>com.pret.entity.ParametrePret</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
        </properties>
    </persistence-unit>
</persistence>